        <tabs>
          <Tab text="Appointment Type By Month">
            <content>
              <AnchorPane minHeight="0" minWidth="0" prefHeight="290" prefWidth="770">
                     <children>
                        <TextArea fx:id="reportOne" editable="false" layoutX="10" layoutY="50" prefHeight="280" prefWidth="750" />
                        <Label layoutX="170" layoutY="15" text="Appointment Type By Month">
                           <font>
                              <Font size="18.0" />
                           </font>
                        </Label>
                     </children></AnchorPane>
            </content>
          </Tab>
          <Tab text="Consultant Schedules">
            <content>
              <AnchorPane minHeight="0" minWidth="0" prefHeight="350" prefWidth="770">
